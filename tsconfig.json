{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2019",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2019", "WebWorker"],
    "sourceMap": true
  },
  "include": ["src/*.ts"]
}
